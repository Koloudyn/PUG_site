.main
    margin : 10px auto
    padding : 10px 30px
    width : 50%
    min-height : 700px
    min-width : 700px
    background-color : #E3E3E3
.center
    display : flex
    justify-content : center
    .menu
        margin : 3px
        padding : 5px 10px
        a
            text-align : center
            color : black
            font-weight : bold
            text-decoration : none;
        &:hover, &.selected
            background-color : #DCDCDC

body
    background-color : #164B69
    font: 14px Arial
p
    text-align : justify
    line-height : 2
    text-indent : 30px
    word-spacing : 10px

.index
    overflow : hidden
    img
        float : right
        margin-left : 7px
        margin-top : 5px
.video
    display: flex
    justify-content : center
iframe
    display: flex
    justify-content : center

.img_font
    width : 100%
    padding : 10px 0px
    display : flex
    justify-content : space-between
.img_font div
    width : 33%
    padding : 3px 0px
.img_font img
    width : 100%


.center-image
    width : 100%
    padding : 10px 0px
    display : flex
    justify-content : space-between
.center-image div
    width : 49%
    padding : 3px 0px
.center-image img
	width : 100%

.center-text
    display : inline-flex
    justify-content : space-between
    width : 100%
.texts
    background-color : gray
    width : 30%
    padding : 10px
    margin : 3px
.color-lightGrey
    background-color : lightGrey
.color-white
    background-color : white


@media(max-width: 800px)
    .center
        flex-direction : column
    .menu
        text-align : center
    .index
        text-align : center
        img
            width : 100%
            float : none
            margin-left : 0px
            margin-top : 0px
    .video
        width : 100%
    p
        line-height : 1
        font-size : 12px
    .main
        width : 70%
        min-height : 300px
        min-width : 300px

    .img_font, .center-image, .center-text
        flex-direction : column
        align-items : center
    .img_font div, .center-image div, .texts
        width : 100%
    .texts
        width : 100%
        padding : 0px